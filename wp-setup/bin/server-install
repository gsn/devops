#!/bin/bash

# Include library
source gsn_echo.sh
for gsn_include in $(find lib/ -iname "*.sh"); do
  source $PWD/$gsn_include
done

gsn_lib_echo "apt-get update, please wait..."
apt-get update &>> /dev/null

gsn_lib_echo "apt-get upgrade, please wait..."
apt-get -y upgrade &>> /dev/null

# Install Common Library
gsn_install_common

# Install PHP
gsn_install_php

# Run other setups
gsn_setup_php
gsn_setup_nginx

# make sure opcache is enabled
php5enmod opcache
service php5-fpm restart
